generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Advisor {
  id      Int     @id @default(autoincrement())
  name    String?
  auth_id String  @unique
  clubs   Club[]
}

model Club {
  id      Int       @id @default(autoincrement())
  name    String    @unique
  secret  String
  members Member[]
  advisors Advisor[]
}

model Member {
  id       Int       @id @default(autoincrement())
  name     String
  password String
  clubId   Int
  Club     Club      @relation(fields: [clubId], references: [id])
  Project  Project[]
}

model Project {
  id       Int     @id @default(autoincrement())
  title    String
  author   String
  link     String
  memberId Int?
  Member   Member? @relation(fields: [memberId], references: [id])
}
