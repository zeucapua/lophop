generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Advisor {
  id      Int     @id @default(autoincrement())
  name    String?
  auth_id String  @unique
  clubs   Club[]  @relation("AdvisorToClub")
}

model Club {
  id       Int       @id @default(autoincrement())
  name     String
  slug     String    @unique
  secret   String
  members  Member[]
  advisors Advisor[] @relation("AdvisorToClub")
}

model Member {
  id       Int       @id @default(autoincrement())
  name     String
  password String
  clubId   Int
  avatar   Int
  Club     Club      @relation(fields: [clubId], references: [id])
  projects Project[] @relation("MemberToProject")
}

model Project {
  id      Int      @id @default(autoincrement())
  title   String
  link    String
  content String
  members Member[] @relation("MemberToProject")
}
